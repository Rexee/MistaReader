<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:dropDownListViewStyle">@style/MistaSpinnerStyle</item>
        <item name="android:divider">@drawable/divider_list</item>
        <item name="android:listDivider">@drawable/divider_list</item>
        <item name="selectableItemBackgroundBorderless">?android:attr/selectableItemBackground</item>
